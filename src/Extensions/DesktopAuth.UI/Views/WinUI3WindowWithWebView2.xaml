<Window
    x:Class="DevTKSS.Extensions.Uno.Authentication.Desktop.UI.WinUI3WindowWithWebView2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dui="using:DevTKSS.Extensions.Uno.Authentication.Desktop.UI"
    xmlns:uen="using:Uno.Extensions.Navigation.UI"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
 <!--TODO: Replace with uen based WebView2AuthenticationPage usage, so we have a preset Window which supports the correct Open + Stay Open + Close flow -->
        <ProgressRing x:Name="progressRing"
                      Grid.Row="0"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch" />

     
        <WebView2 x:Name="webView"
                 Grid.Row="1"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch" />
    </Grid>
</Window>
