<Page x:Class="DevTKSS.Extensions.Uno.Authentication.Desktop.UI.WebView2AuthenticationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv="using:DevTKSS.Extensions.Uno.Authentication.Desktop.UI"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ProgressRing Grid.Row="0"
                      IsActive="{Binding ElementName=WebView, Path=(wv:WebView2Extensions.IsNavigating)}"
                      Visibility="{Binding ElementName=WebView, Path=(wv:WebView2Extensions.IsNavigating),Converter={StaticResource FalseToCollapsedConverter}}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Width="50"
                      Height="50" />

        <WebView2 x:Name="webView"
                  Grid.Row="1"
                  wv:WebView2Extensions.DocumentTitle="{Binding Title}"
                  wv:WebView2Extensions.NavigationStartingCommand="{Binding NavigationStartedAsync}"
                  wv:WebView2Extensions.NavigationCompletedCommand="{Binding NavigationCompletedAsync}"
                  wv:WebView2Extensions.IsNavigating="{Binding IsNavigating}"
                  Source="{Binding Source}" />

    </Grid>
</Page>
