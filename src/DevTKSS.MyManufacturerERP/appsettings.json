{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "%TEMP%/Logs/log.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "DevTKSS.MyManufacturerERP"
    }
  },
  "AppConfig": {
    "Title": "My Manufacturer ERP",
    "Environment": "Production"
  },
  "OAuth": {
    "Url": "https://openapi.etsy.com/v3/",
    "UseNativeHandler": true,
    "TokenCacheOptions": {
      "AccessTokenKey": "AccessToken",
      "RefreshTokenKey": "RefreshToken",
      "IdTokenKey": "IdToken"
    },
    "ClientOptions": {
      "ClientID": "",
      "EndpointOptions": {
        "AuthorizationEndpoint": "https://www.etsy.com/oauth/connect",
        "TokenEndpoint": "/public/oauth/token",
        "UserInfoEndpoint": "/public/users/me"
      },
      "CallbackUri": "http://mymanufacturererp/etsy/callback",
      "Scopes": [
        "listings_r",
        "listings_w",
        "shops_r",
        "shops_w"
      ]
    },
    "UriTokenOptions": {
      "AccessTokenKey": "access_token",
      "RefreshTokenKey": "refresh_token",
      "IdTokenKey": "client_id",
      "OtherTokenKeys": [
        {
          "ShopIdTokenKey": "shop_id"
        }
      ]
    }
  },
  "LocalizationConfiguration": {
    "Cultures": [
      "de",
      "es",
      "fr",
      "pt-BR",
      "en"
    ]
  },

  "ServerOptions": {
    "RootUri": "https://my-manufacturer-erp",
    "Port": 5001,
    "CallbackUri": "/etsy/callback"
  }
}