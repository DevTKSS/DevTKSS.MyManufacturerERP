{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "%TEMP%/Logs/log.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "DevTKSS.MyManufacturerERP"
    }
  },
  "AppConfig": {
    "Title": "My Manufacturer ERP",
    "Environment": "Production"
  },
  "OAuth": {
    "Url": "https://openapi.etsy.com",
    "UseNativeHandler": true,

    "AccessToken": "",
    "RefreshToken": "",
    "IdToken": "",
    "EndpointOptions": {
      "AuthorizationEndpoint": "https://www.etsy.com/oauth/connect",
      "TokenEndpoint": "/v3/public/oauth/token",
      "UserInfoEndpoint": "/v3/public/users/me",
      "RedirectUri": "https://my-manufacturer-erp.com/etsy/callback"
    },
    "ClientId": "",
    "Scopes": [
      "listings_r",
      "listings_w",
      "shops_r",
      "shops_w"
    ],
    "OtherParameters": [
      {
        "ShopIdTokenKey": "shop_id"
      }
    ]
  },
  "LocalizationConfiguration": {
    "Cultures": [
      "de",
      "es",
      "fr",
      "pt-BR",
      "en"
    ]
  },
 
  "ServerOptions": {
    "RootUri": "https://my-manufacturer-erp",
    "Port": 5001,
    "CallbackUri": "/etsy/callback"
  }
}